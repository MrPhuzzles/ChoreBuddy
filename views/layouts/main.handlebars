<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Chore Buddy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/stylesheets/style.css" />

</head>

<body>
  <div class="flex-column justify-space-around">
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">ChoreBuddy</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              {{#if loggedIn}}
              <a class="nav-link align-self-start" href="/profile">Dashboard</a>

              <button class="btn btn-outline-danger" id="logout">Logout</button>
              {{else}}
              <a class="btn btn-dark" href="/login">Login</a>
              <a class="btn btn-dark" href="/signup">Sign Up</a>
              {{/if}}
            </div>
            <div class="navbar-nav"></div>
          </div>
        </div>
      </nav>
    </header>
    <div class="flex-wrapper">
      <main class="container container-fluid mt-3">
        {{{body}}}
      </main>


    </div>
    <footer>
      <h2>Thank you for contributing!<i class="bi bi-balloon-heart"></i></h2>

    </footer>
  </div>
  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
  {{!--
  <script src="comment.js"></script> --}}
</body>



</html>