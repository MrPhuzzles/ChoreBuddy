{{#if user}}
<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">{{user}}'s Reviews</h2>
  </div>
</div>

<div class="row justify-content-center">
  <div class=" col-md-6">
    <h3 class="reviews-header">List of Reviews:</h3>
    <div class="row row-cols-1 row-cols-md-2 g-4 review-card">
      {{#each reviewsAboutMe}}
      <div class="col">
        <div class="card" style="width: 18rem">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              {{comment}}
            </li>
            <div class="card-footer">
              Created by <span class="listing-user">{{reviewer.reviewer_name}}</span> on {{format_date created_at}}
            </div>
          </ul>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>
{{else}}
<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">You don't have any reviews!</h2>
  </div>
</div>
{{/if}}