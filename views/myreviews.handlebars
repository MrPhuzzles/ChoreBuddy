{{#if user}}
<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">{{user}}'s Reviews</h2>
  </div>
</div>

  <div class="col-md-6 blog-list">
    <h3>List of Reviews:</h3>

    {{#each reviewsAboutMe}}
    <div class="row mb-4 blog">
      <div class="col-md-5">
        <p>
          {{comment}}
        </p>
        <p>Created by {{reviewer.reviewer_name}} on {{format_date created_at}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{else}}
<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">You don't have any reviews!</h2>
  </div>
</div>
{{/if}}

