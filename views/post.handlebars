<div>
  <div class="row mb-4 blog" >
  <div class="col-md-5" >
    <h2>
      {{post.title}}
    </h2>
    <p>Created by <a href="/reviews">{{post.user.username}}</a> on {{post.created_at}}</p> 
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
    <p>{{post.address}} {{post.city}} {{post.province}} {{post.postal}}</p>
  </div>
    <form class="accept-form">
      {{#if loggedIn}}
        <button type="submit" class="accept-btn">Accept</button> 
      {{/if}}
    </form>
</div>
{{#if loggedIn}}
<script src="/javascript/accept-req.js"></script>
{{/if}}


