<div class="row">
  <div class="col-auto">
    <h2 class="dashboard-greeting">Hello, {{requester.requester}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Listing:</h3>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-content">Content</label>
        <textarea id="post-content" name="post-content"></textarea>
      </div>
      <div>
        <label for="post-address">Address</label>
        <input type="text" id="post-address" name="post-address" />
      </div>
      <div>
        <label for="post-city">City</label>
        <input type="text" id="post-city" name="post-city" />
      </div>
      <div>
        <label for="post-province">Province</label>
        <input type="text" id="post-province" name="post-province" />
      </div>
      <div>
        <label for="post-postal">Postal Code</label>
        <input type="text" id="post-postal" name="post-postal" />
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>

  <a href="/profile/accepted">Accepted Listings</a>


  <div class="col-md-6 blog-list">
    <h3>My Listings:</h3>

    {{> posts-info}}

  </div>

  <script src="/javascript/create-post.js"></script>