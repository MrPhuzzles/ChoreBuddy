<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">{{reviewee}}'s Reviews</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-sm-6 mt-4">
    <h3>Leave a review for, <span class="listing-user">{{reviewee}}</span>!</h3>

    <form class="new-reviews-form">
      <div class="input-group mb-3">
        <span class="input-group-text">Comment</span>
        <textarea id="review-comment" name="review-comment" class="form-control"></textarea>
      </div>
      <button type="submit" class="btn btn-success">Create</button>
    </form>
  </div>

  <div class="col-sm-6 mt-4">
    <h3>Other Reviews:</h3>
    <div class="row mt-3 row-cols-1 row-cols-md-2 g-4">
      {{#each reviews}}
      <div class="col">
        <div class="card" style="width: 18rem">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              {{comment}}
            </li>
            <div class="card-footer">
              Created by <span class="listing-user">{{reviewer.reviewer_name}}</span> on {{format_date created_at}}
            </div>
          </ul>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</div>

<script src="/javascript/new-reviews.js"></script>