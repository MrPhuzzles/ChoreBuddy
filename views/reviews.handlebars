<div class="row justify-content-center">
  <div class="col-auto">
    <h2 class="dashboard-greeting">{{reviewee}}'s Reviews</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Leave a review for, {{reviewee}}!</h3>

    <form class="new-reviews-form">
      <div class="input-group mb-3">
        <span class="input-group-text">Comment</span>
        <textarea id="review-comment" name="review-comment" class="form-control"></textarea>
      </div>
      <button type="submit" class="btn btn-success">Create</button>
    </form>
  </div>

  <div class="col-md-6 blog-list">
    <h3>Other Reviews:</h3>

    {{#each reviews}}
    <div class="row mb-4 blog">
      <div class="col-md-5">
        <p>
          {{comment}}
        </p>
        <p>Created by {{reviewer.reviewer_name}} on {{format_date created_at}}</p>
      </div>
    </div>
    {{/each}}
  </div>

</div>

<script src="/javascript/new-reviews.js"></script>