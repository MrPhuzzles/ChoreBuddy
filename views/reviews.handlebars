<div class="row">
  <div class="col-auto">
    <h2>Hello, {{reviews.user.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Listing:</h3>

    <form class="new-reviews-form">
      <div>
        <label for="review-comment">Comment</label>
        <textarea id="review-comment" name="review-comment"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>

  <div class="col-md-6 blog-list">
    <h3>Other Reviews:</h3>

    {{#each reviews}}
        <div class="row mb-4 blog">
          <div class="col-md-5">
            <p>
              {{comment}}
            </p>
            <p>Created by {{username}} on {{format_date created_at}}</p>
          </div>
        </div>
    {{/each}}
  </div>

</div>

<script src="/javascript/new-reviews.js"></script>